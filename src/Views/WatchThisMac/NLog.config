<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<variable name="logDirectory" value="${specialfolder:folder=Personal}/Library/Logs/WatchThis"/>

    <targets>
        <target name="logfile" xsi:type="File"
        	fileName="${logDirectory}/WatchThis_${date:format=yyyy-MM-dd}.txt"
        	layout="${date:format=HH\:mm\:ss} ${level} [${threadname}-${threadid}] [${callsite:fileName=false:includeSourcePath=false:methodName=false}] ${message}" 
        	maxArchiveFiles="10" archiveFileName="${logDirectory}/archive/WatchThis-##" archiveEvery="Day" archiveNumbering="Sequence" />
        <target name="console" xsi:type="ColoredConsole" />
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="logfile,console" />
    </rules>
</nlog>